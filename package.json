{
  "scripts": {
    "dev": "NODE_ENV=development nodemon -w src -x 'babel-node src/index.js'",
    "build": "NODE_ENV=production babel --copy-files src -d functions",
    "clean": "rimraf functions",
    "deps:copy": "copy package.json functions",
    "deps:install": "yarn --cwd functions",
    "prod": "yarn clean && yarn build && yarn deps:copy && yarn deps:install",
    "test": "eslint src",
    "format": "prettier-eslint src/**/*.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "babel-eslint": "^8.2.3",
    "copy": "^0.3.1",
    "eslint": "^4.19.1",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-import-resolver-webpack": "^0.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "nodemon": "^1.17.4",
    "prettier-eslint-cli": "^4.7.1",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.46",
    "apollo-server-express": "^1.3.6",
    "cors": "^2.8.4",
    "express": "^4.16.3",
    "firebase-admin": "^5.12.0",
    "firebase-functions": "^1.0.2",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.1",
    "merge-graphql-schemas": "^1.5.1",
    "morgan": "^1.9.0",
    "node-fetch": "^2.1.2"
  }
}
